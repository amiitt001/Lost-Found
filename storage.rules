rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Reports are stored under `reports/{userId}/{filename}`
    // - Allow authenticated users to write only into their own folder.
    // - Reads are allowed publicly by default here to keep image URLs accessible
    //   when the corresponding Firestore document is readable. Adjust if you
    //   want images to be private as well.
    match /reports/{userId}/{allPaths=**} {
      // Allow authenticated users to write only into their own folder.
      allow write: if request.auth != null && request.auth.uid == userId;
      // Read by anyone; image visibility should be controlled by Firestore doc rules.
      allow read: if true;
    }

    // Default: deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
